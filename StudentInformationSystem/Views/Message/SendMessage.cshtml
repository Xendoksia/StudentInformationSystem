@model StudentInformationSystem.Models.Message

@{
    ViewData["Title"] = "Send Message";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .message-card {
        margin-top: 50px;
        padding: 30px;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

        .message-card h4 {
            font-weight: bold;
            margin-bottom: 25px;
        }

    .form-group label {
        font-weight: 500;
    }

    .btn-success {
        border-radius: 25px;
        padding: 10px 30px;
        font-size: 1rem;
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-outline-success {
        border-radius: 25px;
        padding: 10px 30px;
        font-size: 1rem;
    }
</style>

<h1 class="text-center"><i class="fas fa-paper-plane"></i> Send Message</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="message-card">
                <h4 class="text-center">Message Details</h4>

                <form asp-action="SendMessage" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="Sender"></label>
                        <input asp-for="Sender" class="form-control" placeholder="Enter Your Name Surname" />
                        <span asp-validation-for="Sender" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ReceiverIdentityNumber"></label>
                        <input asp-for="ReceiverIdentityNumber" class="form-control" placeholder="Enter Student Identity Number" />
                        <span asp-validation-for="ReceiverIdentityNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject"></label>
                        <input asp-for="Subject" class="form-control" placeholder="Enter Subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your message..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
             

                    <div class="form-group">
                        <label asp-for="SentAt">Sent Time</label>
                        <input asp-for="SentAt" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="SentAt" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Send" class="btn btn-success" />
                        <a asp-action="Index" asp-controller="TeacherMain" class="btn btn-outline-success ml-2">Back to Dashboard</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
