@model StudentInformationSystem.Models.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}
<style>
    .back-button {
        position: fixed;
        top: 100px;
        left: 100px;
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 30px;
        box-shadow: 0px 4px 10px rgba(0, 123, 255, 0.4);
        transition: background-color 0.3s, transform 0.3s;
        z-index: 9999;
    }

        .back-button:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
            text-decoration: none;
        }
</style>

<h1 class="text-center">Delete Lesson</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Warning!</h4>
                    <p class="card-text">Are you sure you want to delete this lesson?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">Semester:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Semester)</dd>
                        <dt class="col-sm-4">Credit:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Credit)</dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    function goBack() {
        window.history.back();
    }
</script>