@model IEnumerable<StudentInformationSystem.Models.Lesson>

@{
    ViewData["Title"] = "Teacher Main Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout kullanımı
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .Container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    .card-custom {
        width: 30%;
        min-width: 250px;
        height: 300px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: 0.3s;
        text-align: center;
    }

        .card-custom:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .card-custom i {
            font-size: 50px;
            color: #007bff;
            margin-bottom: 20px;
        }

        .card-custom h5 {
            font-weight: bold;
            margin-bottom: 20px;
        }

        .card-custom .btn {
            border-radius: 30px;
            padding: 8px 25px;
        }

    .main-title {
        margin-top: 40px;
        text-align: center;
        font-weight: bold;
        font-size: 24px;
    }
</style>

<div class="container mt-5">
    <h2 class="main-title">Teacher Main Page</h2>

    <div class="Container">
        <div class="card-custom">
            <i class="fas fa-book"></i>
            <h5>Manage Lessons</h5>
            <a href="@Url.Action("Index", "Lesson")" class="btn btn-primary">Go</a>
        </div>

        <div class="card-custom">
            <i class="fas fa-graduation-cap"></i>
            <h5>Manage Grades</h5>
            <a href="@Url.Action("Index", "Grade")" class="btn btn-primary">Go</a>
        </div>

        <div class="card-custom">
            <i class="fas fa-bullhorn"></i>
            <h5>Manage Announcements</h5>
            <a href="@Url.Action("Index", "Announcement")" class="btn btn-primary">Go</a>
        </div>
    </div>
</div>
